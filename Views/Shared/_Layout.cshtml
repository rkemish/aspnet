@using Microsoft.Extensions.Options
@using aspnet.Models
@inject IOptions<ThemeSettings> ThemeOptions
@{
    var theme = ThemeOptions.Value;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - aspnet</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/aspnet.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <style>
        :root {
            --theme-primary: @theme.Primary;
            --theme-primary-dark: @theme.PrimaryDark;
            --theme-secondary: @theme.Secondary;
            --theme-accent: @theme.Accent;
            --theme-bg: @theme.Background;
            --theme-surface: @theme.Surface;
            --theme-text: @theme.TextPrimary;
            --theme-text-secondary: @theme.TextSecondary;
            --theme-text-muted: @theme.TextMuted;
            --theme-border: @theme.Border;
            --theme-nav-bg: @theme.NavBackground;
            --theme-nav-text: @theme.NavText;
            --theme-footer-bg: @theme.FooterBackground;
            --theme-footer-text: @theme.FooterText;
        }
    </style>
</head>
<body>
    <header>
        <nav class="site-nav">
            <div class="container-fluid px-4">
                <div class="d-flex align-items-center justify-content-between py-2">
                    <a class="site-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <span class="brand-icon">&#9670;</span>
                        aspnet
                    </a>
                    <button class="navbar-toggler d-sm-none" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu"
                            aria-controls="navMenu" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="toggler-bar"></span>
                        <span class="toggler-bar"></span>
                        <span class="toggler-bar"></span>
                    </button>
                    <div class="collapse navbar-collapse d-sm-flex" id="navMenu">
                        <ul class="nav-links d-flex align-items-center gap-1 mb-0 list-unstyled ms-auto">
                            <li>
                                <a class="nav-link-item" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li>
                                <a class="nav-link-item" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="site-content">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="container-fluid px-4">
            <div class="d-flex flex-column flex-sm-row align-items-center justify-content-between py-4 gap-2">
                <p class="mb-0">&copy; 2026 aspnet. All rights reserved.</p>
                <div class="d-flex gap-3">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                    <a href="#">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
